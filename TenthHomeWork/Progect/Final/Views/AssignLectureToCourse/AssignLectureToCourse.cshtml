
@using Final.ViewModel
@model Final.ViewModel.AssignLectureToCourseModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AssignLectureToCourse</title>
</head>
<body>
    <div>
        <p>@Model.CourseName</p>
        <p>@Model.BirthDate</p>
        <form asp-action="Assign">
            @Html.HiddenFor(m => Model.Id)
            @for (int i = 0; i < Model.Lectures.Count; i++)
            {
                @Model.Lectures[i].Name
                @Html.CheckBoxFor(m => Model.Lectures[i].IsChecked)
                @Html.HiddenFor(m => Model.Lectures[i].Id)
                <br />
            }
            <p>
                <input type="submit" value="Submit" style="width: 20%; height:40px" />
            </p>
        </form>
    </div>
</body>
</html>
