
@model Models.Models.Course
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Action Course</title>
</head>
<body>
    <form asp-action="@ViewBag.Action">
        <p>Name</p>
        <input asp-for="Name" autofocus />
        <p>StartDate</p>
        <input asp-for="StartDate" />
        <p>EndDate</p>
        <input asp-for="EndDate" />
        <p>PassCredits</p>
        <input asp-for="PassCredits" />
        <input type="hidden" asp-for="Id" />
        <p>
            <input type="submit" value="Submit" style="width: 20%; height:40px" />
        </p>
    </form>
</body>
</html>
