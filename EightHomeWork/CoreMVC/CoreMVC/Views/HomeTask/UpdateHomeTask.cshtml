

@model Api.Data.HomeTask 

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Action HomeTask</title>
</head>
<body>
    <form asp-action="@ViewBag.Action">
        Date<input asp-for="Date" />
        Title<input asp-for="Title" />
        Description<input asp-for="Description" />
        Number<input asp-for="Number" />
        <input type="hidden" asp-for="Id" />
        <input type="hidden" value="@ViewBag.Id" />
        <input type="submit" value="submit" />
    </form>
</body>
</html>
